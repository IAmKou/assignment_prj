<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" minHeight="122.0" minWidth="995.0" spacing="10" style="-fx-border-width: 0 0 2px 0;" styleClass="brown-border-line" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="itemImage" fitHeight="100.0" fitWidth="100.0">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </HBox.margin>
      </ImageView>
      <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="480.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="itemName" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="39.0" prefWidth="674.0" style="-fx-border-color: transparent; -fx-border-style: solid; -fx-border-width: 0 0 0 2px; -fx-alignment: center-left;" styleClass="item">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Label fx:id="itemSinglePrice" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="39.0" prefWidth="674.0" style="-fx-border-color: transparent; -fx-border-style: solid; -fx-border-width: 0 0 0 2px; -fx-alignment: center-left;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="94.0">
         <children>
            <Spinner fx:id="itemQuantity" initialValue="1" max="10" prefHeight="25.0" prefWidth="94.0" />
            <Label fx:id="itemPrice" maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="37.0" style="-fx-border-color: transparent; -fx-border-style: solid; -fx-border-width: 0 0 0 2px; -fx-alignment: center-right;" styleClass="item" textAlignment="RIGHT">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Label prefHeight="90.0" prefWidth="0.0" styleClass="brown-border-line">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin>
      </Label>
      <ImageView fx:id="btnRemove" fitHeight="35.0" fitWidth="35.0" onKeyPressed="#handleRemove" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../resources/remove.png" />
         </image>
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <rotationAxis>
            <Point3D />
         </rotationAxis>
      </ImageView>
   </children>
</HBox>
